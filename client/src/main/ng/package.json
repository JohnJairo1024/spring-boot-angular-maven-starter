{
  "name": "spring-boot-angular-maven-starter",
  "version": "1.0.0",
  "description": "Spring Boot + Angular 4",
  "scripts": {
    "build": "npm run build:init && npm run build:webpack",
    "build:init": "npm install && npm run clean",
    "build:webpack": "webpack --config webpack.config.js --progress --profile --bail",
    "clean": "rimraf dist",
    "start": "webpack-dev-server --inline --progress --port 3001"
  },
  "dependencies": {
    "@angular/common": "~4.1.3",
    "@angular/compiler": "~4.1.3",
    "@angular/core": "~4.1.3",
    "@angular/forms": "~4.1.3",
    "@angular/http": "~4.1.3",
    "@angular/platform-browser": "~4.1.3",
    "@angular/platform-browser-dynamic": "~4.1.3",
    "@angular/router": "~4.1.3",

    "core-js": "^2.4.1",
    "rxjs": "^5.4.0",
    "zone.js": "^0.8.11"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.41",
    "@types/node": "^7.0.27",

    "node-sass": "^4.5.3",
    "rimraf": "^2.6.1",
    "typescript": "^2.3.4",

    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "css-loader": "^0.28.4",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "to-string-loader": "^1.1.5",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.13.1",

    "webpack": "~2.6.1",
    "webpack-dev-server": "~2.4.5",
    "webpack-merge": "~4.1.0",
    "html-webpack-plugin": "~2.28.0",
    "extract-text-webpack-plugin": "~2.1.0"
  },
  "author": "Alexey (hiper2d) Zelenovsky",
  "license": "ISC"
}